{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ сборка активного файла",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                    "${workspaceFolder}/main.cc",
                    "${workspaceFolder}/array.cc",
                    "${workspaceFolder}/input_array.cc",
                    "${workspaceFolder}/task.cc",
                    "-o",
                    "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}